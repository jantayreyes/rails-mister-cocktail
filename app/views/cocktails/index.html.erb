
<h1>Cocktails</h1>
<div class="row">
  <% @cocktails.each do |cocktail|%>
    <div class="col-8 col-md-3">
          <div class="card mt-4">
            <img src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80" alt="" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"> <%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          </div>
        </div>
    </div>
  <%end%>
</div>
<%= link_to 'Add a Cocktail', new_cocktail_path %>